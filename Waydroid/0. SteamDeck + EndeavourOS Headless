
curl -sSL https://raw.githubusercontent.com/urbancompasspony/bashrc/main/install.sh | bash

sudo mkdir /home/administrador
sudo chmod 777 -R /home/administrador

sudo reflector --protocol https --verbose --latest 25 --sort rate --save /etc/pacman.d/mirrorlist
sudo eos-rankmirrors --verbose
yay -Syyu

sudo wget https://github.com/mikefarah/yq/releases/latest/download/yq_linux_amd64 -O /usr/local/bin/yq
sudo chmod +x /usr/local/bin/yq

sudo pacman -S docker-buildx docker btop lib32-pipewire lib32-libpulse dialog unzip inxi iotop cronie rocm-hip-runtime rocm-opencl-runtime rocminfo opencl-headers opencl-clhpp radeontop

sudo systemctl enable --now sshd cronie docker 

sudo pacman -S openbox wayland labwc obconf-qt
mkdir -p .config/labwc
cp /etc/xdg/openbox/menu.xml ~/.config/labwc/menu.xml

START:
$ labwc
